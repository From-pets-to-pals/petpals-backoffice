{
  "build": {
    "beforeDevCommand": "npm run start",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:4200",
    "distDir": "../dist/petpals/browser"
  },
  "package": {
    "productName": "petpals",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "http": {
        "all": true,
        "request": true,
        "scope": ["http://**"]

      },
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": true
      }
    },

    "windows": [
      {
        "title": "PetPals",
        "width": 1000,
        "height": 750,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
